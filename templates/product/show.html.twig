{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>Product</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ product.price }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('bar_product_index',{'bar': product.bar.slug}) }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('bar_product_edit', {'id': product.id, 'bar': product.bar.slug}) }}">edit</a>

		{{ include('product/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
