{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}</td>
					<td>
						<a href="{{ path('bar_product_show', {'id': product.id, 'bar': product.bar.slug}) }}">show</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('bar_product_edit', {'id': product.id, 'bar': product.bar.slug}) }}">edit</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('bar_product_new',{ 'bar': bar.slug}) }}">Create new</a>
	{% endif %}
{% endblock %}
