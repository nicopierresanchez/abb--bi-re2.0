<form method="post" action="{{ path('bar_product_delete', {'id': product.id, 'bar': product.bar.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn">Delete</button>
</form>
