{% extends 'base.html.twig' %}

{% block title %}Bar index
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="button_back">
		<a href="{{ path('user_show', {'id': app.user.id}) }}">
			⬅ retour</a>
	</div>
	<div class="index_title">
		<h1>Mes Bars</h1>
	</div>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Phone</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for bar in bars %}
				<tr>
					<td>{{ bar.name }}</td>
					<td>{{ bar.address }}</td>
					<td>{{ bar.phone }}</td>
					<td>
						<a href="{{ path('client_bar_show', {'id': bar.id}) }}">Voir</a>
						<a href="{{ path('client_bar_edit', {'id': bar.id}) }}">Modifier</a>

						<a href="{{ path('bar_product_index', {'bar': bar.slug}) }}">carte</a>
						{{ include('client_bar/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucun bar par ici</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
	<div class="action">
		<a href="{{ path('client_bar_new') }}">Créer</a>
	</div>
{% endblock %}
